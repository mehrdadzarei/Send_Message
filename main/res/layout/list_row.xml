<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#1c2869"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameListId"
        android:text="name"
        android:textSize="20sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/surnameListId"
        android:text="surname"
        android:textSize="20sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/nameListId"
        android:layout_toRightOf="@+id/nameListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/titleCellNoListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameListId"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Cell No.:"
        android:textSize="20sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/cellNoListId"
        android:text="225412336"
        android:textSize="20sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/titleCellNoListId"
        android:layout_toRightOf="@+id/titleCellNoListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/titleEmailListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleCellNoListId"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Email:"
        android:textSize="20sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/emailListId"
        android:text="test@gmail.com"
        android:textSize="20sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/titleEmailListId"
        android:layout_toRightOf="@+id/titleEmailListId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=">"
        android:textSize="50sp"
        android:textColor="#ddecc5"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/titleCellNoListId"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>